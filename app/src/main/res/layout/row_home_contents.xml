<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.pocketfarmer.pocketfarm.src.model.DataBoard" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/contents_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            bind_img_url="@{item.boardImg}"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/contents_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/contents_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.category}"
            android:textSize="10sp"
            android:background="@drawable/edittext_background"
            android:paddingHorizontal="5dp"
            android:paddingVertical="3dp"
            android:layout_marginStart="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/contents_image"/>
        <TextView
            android:id="@+id/contents_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.tag}"
            android:textSize="10sp"
            android:textColor="#20591d"
            android:background="@drawable/tag_green_background"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:layout_marginStart="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/contents_tag1"/>
        <TextView
            android:id="@+id/contents_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            tools:text="지훈이네 경북 의성 사과농장"
            android:textSize="14sp"
            android:textColor="#333333"
            android:fontFamily="@font/notosanscjjkr_regular"
            android:layout_marginStart="9dp"
            app:layout_constraintStart_toEndOf="@id/contents_image"
            app:layout_constraintTop_toBottomOf="@id/contents_tag1"/>
        <TextView
            android:id="@+id/contents_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.price1}"
            android:textSize="18sp"
            android:textColor="#333333"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanscjkkr_medium"
            tools:text="dfsdf"
            android:layout_marginStart="9dp"
            app:layout_constraintStart_toEndOf="@id/contents_image"
            app:layout_constraintTop_toBottomOf="@id/contents_title"/>
        <TextView
            android:id="@+id/text_won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textSize="14sp"
            android:textColor="#333333"
            android:fontFamily="@font/notosanscjjkr_regular"
            android:includeFontPadding="false"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/contents_price"
            app:layout_constraintTop_toBottomOf="@id/contents_title"
            app:layout_constraintBaseline_toBaselineOf="@+id/contents_price"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>