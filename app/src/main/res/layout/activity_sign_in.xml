<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.pocketfarmer.pocketfarm.src.viewmodel.SignInViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".src.activity.SignInActivity">

        <ImageView
            android:id="@+id/sign_in_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginTop="132dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/sign_in_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POCKET FARM"
            android:textSize="20sp"
            android:textColor="#333333"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_image"
            app:layout_constraintBottom_toTopOf="@id/sign_in_id_edit"/>

        <EditText
            android:id="@+id/sign_in_id_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:hint="아이디를 입력해주세요"
            android:text="@={viewModel.userId}"
            android:textSize="14sp"
            android:fontFamily="@font/notosanscjjkr_regular"
            android:paddingStart="17dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/sign_in_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sign_in_password_edit"/>

        <EditText
            android:id="@+id/sign_in_password_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:hint="비밀번호를 입력해주세요"
            android:inputType="textPassword"
            android:text="@={viewModel.password}"
            android:textSize="14sp"
            android:fontFamily="@font/notosanscjjkr_regular"
            android:paddingStart="17dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_id_edit"
            app:layout_constraintBottom_toTopOf="@id/sign_in_button"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="로그인"
            android:textColor="#ffffff"
            app:cornerRadius="12dp"
            android:backgroundTint="#20591d"
            android:layout_marginHorizontal="48dp"
            android:onClick="@{()->viewModel.login()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_password_edit"
            app:layout_constraintBottom_toTopOf="@id/sign_in_text_button_layout"/>

        <LinearLayout
            android:id="@+id/sign_in_text_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="68dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sign_in_button"
            app:layout_constraintBottom_toBottomOf="@+id/sign_in_sns_title">
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="아이디 찾기 "
                android:textSize="12sp"
                android:textColor="#333333"
                app:rippleColor="#f5f5f5"/>
            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="#333333"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="비밀번호 찾기"
                android:textSize="12sp"
                android:textColor="#333333"
                app:rippleColor="#f5f5f5"/>
            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="#333333"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="회원가입"
                android:textSize="12sp"
                android:textColor="#333333"
                app:rippleColor="#f5f5f5"/>
        </LinearLayout>
        <TextView
            android:id="@+id/sign_in_sns_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SNS 계정으로 로그인"
            android:textSize="14sp"
            android:textColor="#979797"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintTop_toBottomOf="@id/sign_in_text_button_layout"
            app:layout_constraintBottom_toTopOf="@+id/sign_in_sns_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:id="@+id/sign_in_sns_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="135dp"
            app:layout_constraintTop_toBottomOf="@id/sign_in_sns_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/naver"
                android:layout_marginEnd="19dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook"
                android:layout_marginEnd="19dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kakao"
                android:layout_marginEnd="19dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bm"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
