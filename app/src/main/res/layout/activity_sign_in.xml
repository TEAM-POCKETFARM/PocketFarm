<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.pocketfarmer.pocketfarm.src.viewmodel.SignInViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".src.activity.SignInActivity">

        <EditText
            android:id="@+id/sign_in_id_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sign_in_password_edit"/>

        <EditText
            android:id="@+id/sign_in_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sign_in_button"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textColor="#000000"
            android:backgroundTint="#ffffff"
            android:layout_marginHorizontal="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_in_kakao_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kakao 로그인"
            android:backgroundTint="#E9D103"
            android:layout_marginHorizontal="100dp"
            app:layout_constraintTop_toBottomOf="@id/sign_in_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_in_facebook_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook 로그인"
            android:layout_marginHorizontal="100dp"
            app:layout_constraintTop_toBottomOf="@id/sign_in_kakao_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_in_google_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google 로그인"
            android:textColor="#000000"
            android:backgroundTint="#ffffff"
            android:layout_marginHorizontal="100dp"
            app:layout_constraintTop_toBottomOf="@id/sign_in_facebook_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
