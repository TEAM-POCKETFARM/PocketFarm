<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.pocketfarmer.pocketfarm.src.viewmodel.DetailViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품상세"
                android:textSize="18sp"
                android:textColor="#333333"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:layout_gravity="center"/>
        </androidx.appcompat.widget.Toolbar>
        <com.amar.library.ui.StickyScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:stickyHeader="@id/detail_navigation_bar"
            android:layout_below="@+id/detail_toolbar">
            <LinearLayout
                android:id="@+id/detail_page_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/detail_title_image"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    bind_img_url="@{viewModel.board.boardImg}"
                    android:scaleType="fitXY"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:layout_marginStart="15dp"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/detail_tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.board.category}"
                        android:textSize="10sp"
                        android:background="@drawable/edittext_background"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="3dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/detail_tag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.board.tag}"
                        android:textSize="10sp"
                        android:textColor="#20591d"
                        android:background="@drawable/tag_green_background"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="17dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/detail_tag1"/>
                    <TextView
                        android:id="@+id/detail_title_farm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.board.title}"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/notosanscjjkr_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detail_tag1"/>
                    <TextView
                        android:id="@+id/detail_title_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.board.price1}"
                        tools:text="7,800"
                        android:textSize="25sp"
                        android:textColor="#cc0047"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detail_title_farm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"
                        android:textSize="18sp"
                        android:textColor="#cc0047"
                        android:fontFamily="@font/notosanscjjkr_regular"
                        android:layout_marginStart="3dp"
                        app:layout_constraintStart_toEndOf="@+id/detail_title_price"
                        app:layout_constraintBaseline_toBaselineOf="@+id/detail_title_price"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/detail_price_layout_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textSize="14sp"
                    android:textColor="#6c6c6c"
                    android:fontFamily="@font/notosanscjjkr_regular"
                    android:layout_marginStart="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#f5f5f5"
                        android:elevation="0dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="6dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.amount1}"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/roboto_regular"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginBottom="8dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.boardDetail.price1}"
                                    tools:text="29,350"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/roboto_medium"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="원"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    android:includeFontPadding="false"
                                    android:fontFamily="@font/notosanscjjkr_regular"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#f5f5f5"
                        android:elevation="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="6dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.amount2}"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/roboto_regular"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginBottom="8dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.boardDetail.price2}"
                                    tools:text="29,350"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/roboto_medium"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="원"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    android:includeFontPadding="false"
                                    android:fontFamily="@font/notosanscjjkr_regular"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#f5f5f5"
                        android:elevation="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="6dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.amount3}"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/roboto_regular"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginBottom="8dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.boardDetail.price3}"
                                    tools:text="29,350"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/roboto_medium"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="원"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    android:includeFontPadding="false"
                                    android:fontFamily="@font/notosanscjjkr_regular"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">
                    <TextView
                        android:id="@+id/detail_period_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신청 기간"
                        android:textSize="14sp"
                        android:textColor="#6c6c6c"
                        android:fontFamily="@font/notosanscjjkr_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                        android:id="@+id/detail_number_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최소신청 수량"
                        android:textSize="14sp"
                        android:textColor="#6c6c6c"
                        android:fontFamily="@font/notosanscjjkr_regular"
                        app:layout_constraintTop_toBottomOf="@+id/detail_period_text_title"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/detail_deliver_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="배송 예정일"
                        android:textSize="14sp"
                        android:textColor="#6c6c6c"
                        android:fontFamily="@font/notosanscjjkr_regular"
                        app:layout_constraintTop_toBottomOf="@+id/detail_number_text_title"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/detail_period_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.boardDetail.period}"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginStart="57dp"
                        app:layout_constraintBaseline_toBaselineOf="@id/detail_period_text_title"
                        app:layout_constraintStart_toEndOf="@+id/detail_period_text_title"/>
                    <TextView
                        android:id="@+id/detail_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.goalAmount}"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintStart_toStartOf="@+id/detail_period_text"
                        app:layout_constraintBaseline_toBaselineOf="@id/detail_number_text_title"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="11dp"
                        app:cardBackgroundColor="#20591d"
                        android:layout_marginStart="6dp"
                        app:layout_constraintStart_toEndOf="@+id/detail_number_text"
                        app:layout_constraintTop_toTopOf="@+id/detail_number_text"
                        app:layout_constraintBottom_toBottomOf="@+id/detail_number_text">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.goalRate}"
                            tools:text="115% 달성중"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:fontFamily="@font/notosanscjjkr_regular"
                            android:includeFontPadding="false"
                            android:paddingHorizontal="5dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/detail_deliver_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.boardDetail.deliverDate}"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintStart_toStartOf="@+id/detail_period_text"
                        app:layout_constraintBaseline_toBaselineOf="@id/detail_deliver_text_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#f5f5f5"
                    android:layout_marginTop="27dp"/>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/detail_navigation_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    app:tabSelectedTextColor="@color/selector_bn_text"
                    app:tabIndicatorColor="@color/selector_bn_text">
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/fg_detail_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상품소개"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/fg_detail_farm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="파머/팜소개"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/fg_detail_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상품리뷰"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/fg_detail_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상품문의"/>
                </com.google.android.material.tabs.TabLayout>
                <FrameLayout
                    android:id="@+id/detail_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.amar.library.ui.StickyScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:elevation="5dp"
            android:gravity="center"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:gravity="center">
                <CheckBox
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/selector_heart"
                    android:button="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="찜하기"
                    android:textSize="10sp"
                    android:textColor="#979797"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/detail_reservation_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="예약하기"
                android:textColor="#ffffff"
                app:cornerRadius="12dp"
                android:backgroundTint="#20591d"
                android:layout_marginHorizontal="30dp"/>
        </LinearLayout>
    </RelativeLayout>
</layout>